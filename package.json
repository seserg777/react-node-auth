{
  "name": "react-node-auth",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:react": "turbo run dev --filter=backend --filter=frontend",
    "dev:next": "turbo run dev --filter=backend --filter=frontend-next",
    "build:react": "turbo run build --filter=backend --filter=frontend",
    "build:next": "turbo run build --filter=backend --filter=frontend-next",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "test:backend": "cd apps/backend && npm test",
    "test:frontend": "cd apps/frontend-next && npm test",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "turbo": "^1.10.12"
  },
  "packageManager": "npm@9.6.7",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
